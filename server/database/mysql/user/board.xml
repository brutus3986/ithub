<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
<select id="getBbsInfo" >
  <![CDATA[
      select  * from boards 
      where bbs_id =  #{bbs_id}
  ]]>	
</select>
<select id="getMaxStoryId" >
  <![CDATA[
      select  max(story_id) as story_id from boards
  ]]>	
</select>
<insert id="insertStory" >
  <![CDATA[
      insert into boards( bbs_id,contents,created_at,notice,story_id,title,updated_at,view,writer)
                  values( #{bbs_id},#{contents},now(),#{notice},#{story_id},#{title},now(),#{view},#{writer})
  ]]>	
</insert>

    

</mapper>